@model SecondTaskSupportWebCrew.Models.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}  

<div class="header-login">
    <div class="container">

        <div class="header-up">
            <nav class="Login-up">
                <div class="container">
                    <h3>START STUDIO </h3>
                    <ul>
                        <li><a href="">Welcome</a></li>
                        <li><a href="~/Register/Index">Sign Up</a></li>
                    </ul>
                </div>
            </nav>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {

                <div class="login-layout">
                    <div class="login-content container  text-center">
                        <div class="row">
                            <div class="col-md-4 login-cnt">
                                <h3 class="text-center">Login Form </h3>
                                <form action="/" method="post">
                                    <div class="form-group item-inp">
                                        <div class="col-lg-12 single">
                                            <!-- <span><i class="fa fa-users"></i></span>-->
                                            <input class="form-control" type="text" name="username" placeholder="Your Username" required />
                                        </div>
                                    </div>
                                    <div class="form-group item-inp">
                                        <div class="col-lg-12 single">
                                            <!-- <span><i class="fa fa-users"></i></span>-->
                                            <input class="form-control" type="password" name="password" placeholder="Your Username" required />
                                        </div>
                                    </div>
                                    <div class="form-group item-inp">
                                        <div class="form-check" style="text-align:left;margin-left:15px;">
                                            <input type="checkbox" name="check" class="form-check-input" id="check">
                                            <label class="form-check-label" for="check" style="font-size:13px;letter-spacing:1.1px;margin:5px;margin-top:-5px;">Remember Me</label>
                                        </div>
                                    </div>
                                    <div class="form-group item-inp">
                                        <div class="col-lg-12">
                                            <input style="font-weight:bold;font-family:cursive;font-size:15px;" class="form-control btn btn-primary" type="submit" name="submit" value="Log In" onclick="" />
                                        </div>
                                    </div> 
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }            
        </div>
    </div>
</div>



 

